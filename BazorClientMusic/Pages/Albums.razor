@page "/album/{Id:int}"
@inject NavigationManager NavigationManager
@using BazorClientMusic

<div class="container">
    <!-- Заголовок -->
    <h1 class="text-center my-5" style="color: #4CAF50; font-weight: bold;">Треки в альбоме</h1>

    <!-- Информация об альбоме -->
